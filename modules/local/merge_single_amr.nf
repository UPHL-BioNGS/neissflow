    header4=\$(awk -v OFS="\t" 'NR==1 { print \$3,\$4 }' $ngmaster)

    printf "%s\t%s\t%s\t%s\n" "\$header1" "\$header2" "\$header3" "\$header4" > ${sample_name}/${sample_name}_amr_report.tsv

    join -a1 -a2 \
